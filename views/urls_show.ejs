<%- include('partials/_header', { user: user }) %>

<main style="margin: 1em;">
  <h2>URL Details</h2>
  <% if (!url) { %>
    <p>URL not found.</p>
  <% } else { %>
    <p>Short URL: <%= url.shortURL %></p>
    <p>Long URL: <%= url.longURL %></p>
    <form action="/urls/<%= url.shortURL %>" method="POST">
      <label for="longURL">Edit Long URL:</label>
      <input type="text" name="longURL" value="<%= url.longURL %>" />
      <button type="submit">Save</button>
    </form>
  <% } %>
</main>
